<p id="notice"><%= notice %></p>

<h1>Visitors</h1>

<table>
  <thead>
    <tr>
      <th>Reservation</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Note</th>
      <th>Number persons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visitors.each do |visitor| %>
      <tr>
        <td><%= visitor.reservation %></td>
        <td><%= visitor.name %></td>
        <td><%= visitor.phone %></td>
        <td><%= visitor.note %></td>
        <td><%= visitor.number_persons %></td>
        <td><%= link_to 'Show', visitor %></td>
        <td><%= link_to 'Edit', edit_visitor_path(visitor) %></td>
        <td><%= link_to 'Destroy', visitor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

